<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_alpha_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dip"
        android:text="alpha"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_scale_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:layout_toRightOf="@+id/btn_alpha_anim"
        android:text="scale"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_rotate_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:layout_toRightOf="@+id/btn_scale_anim"
        android:text="rotate"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_translate_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_alpha_anim"
        android:layout_margin="10dip"
        android:text="trans"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_set_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_scale_anim"
        android:layout_margin="10dip"
        android:layout_toRightOf="@+id/btn_translate_anim"
        android:text="set"
        android:textAllCaps="false" />


    <TextView
        android:id="@+id/tv"
        android:layout_width="100dip"
        android:layout_height="200dip"
        android:layout_below="@+id/btn_set_anim"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:background="#ff00ff"
        android:text="@string/hello_world"
        android:textAllCaps="false" />

</RelativeLayout>
